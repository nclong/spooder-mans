    public void LateUpdate()
    {
        if( transform.position.y > 9f )
        {
            transform.position = new Vector3( transform.position.x, 9f, 0f );
        }

        if (Mathf.Sign(transform.localScale.x) >= 0)
        {
            playerInput.inverted = false;
        }
        else
        {
            playerInput.inverted = true;
        }
    }

